@page
@model RazorCrudWeb.Pages.Guests.CreateModel
@{
    ViewData["Title"] = "Sign Guest Book";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Sign Guest Book</h2>
            <hr />
        </div>

        <div class="form-group">
            @*<label class="form-label mt-4">Guest Information</label>*@
            <div class="form-floating mb-3">
                <input asp-for="@Model.Guest.GuestFirstName" type="text" class="form-control" placeholder="First Name">
                <label asp-for="@Model.Guest.GuestFirstName"></label>
                <span class="text-danger" asp-validation-for="@Model.Guest.GuestFirstName"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Guest.GuestLastName" type="text" class="form-control" placeholder="Last Name">
                <label asp-for="@Model.Guest.GuestLastName"></label>
                <span class="text-danger" asp-validation-for="@Model.Guest.GuestLastName"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Guest.GuestNote" type="text" class="form-control" placeholder="Last Name">
                <label asp-for="@Model.Guest.GuestNote"></label>
                <span class="text-danger" asp-validation-for="@Model.Guest.GuestNote"></span>
            </div>
        </div>

        @*<div class="mb-3">
            <label asp-for="@Model.Guest.GuestFirstName"></label>
            <input asp-for="@Model.Guest.GuestFirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Guest.GuestLastName"></label>
            <input asp-for="@Model.Guest.GuestLastName" class="form-control" />
        </div>*@
        @*<div class="mb-3">
            <label asp-for="@Model.Guest.GuestNote" class="form-label mt-4"></label>
            <textarea asp-for="@Model.Guest.GuestNote" class="form-control" rows="3"></textarea>
        </div>*@
        <hr />

        <div class="d-grid gap-2">
            <button class="btn btn-lg btn-primary" type="submit">Sign</button>
        </div>
        
        @*<button type="submit" class="btn btn-primary" style="width:150px">Sign</button>*@
    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}