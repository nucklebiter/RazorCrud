@page
@model RazorCrudWeb.Pages.Guests.IndexModel
@{
    ViewData["Title"] = "Guest Book";
}



<div class="container pt-3">
    <div class="row pt-4"> 
        <div class="col-6">
            <h2 class="text-primary">Guest Book</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary btn-lg"> <i class="bi bi-book"></i> &nbsp; Sign Guest Book</a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Guest First Name
                </th>
                <th>
                    Guest Last Name
                </th>
                <th>
                    Guest Note
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Guests)
            {
                <tr>
                    <td>
                        @obj.GuestFirstName
                    </td>
                    <td>
                        @obj.GuestLastName
                    </td>
                    <td>
                        @obj.GuestNote
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.GuestId" class="btn btn-success mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.GuestId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>
